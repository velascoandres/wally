{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "wally",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "all": true,
        "scope": ["$APP/**"]
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": false,
        "open": true,
        "save": false
      },
      "path": {
        "all": true
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["$DOCUMENT/**", "$DESKTOP/*", "$DOWNLOAD/*"]
      }
    },
    "windows": [
      {
        "title": "wally",
        "width": 350,
        "height": 600,
        "resizable": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.velascoandrs.wally",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    }
  }
}
